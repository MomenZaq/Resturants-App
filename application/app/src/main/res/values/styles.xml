<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="fontBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Changa-SemiBold.ttf</item>
    </style>

    <style name="fontLight" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">Changa-Light.ttf</item>
    </style>



    <style name="splashScreenTheme" parent="@style/AppTheme.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->

        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
